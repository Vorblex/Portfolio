mixin title(title, url, addClass)
  h1(class=`title ${addClass}`)= title
    svg.title__svg 
      use(xlink:href=`assets/img/sprite.svg#${url}`) 


mixin triangle(leftFill= '', rightFill= leftFill)
  svg(version="1.1"
          xmlns="http://www.w3.org/2000/svg"
          viewbox="0 0 1000 100" 
          preserveAspectRatio="none" 
          class="triangle")
        polygon(points="0,0 0,100 500.6,100" class=`${leftFill}`)
        polygon(points="500.6,100 1000,0 1000,100 " class=`${rightFill}`)