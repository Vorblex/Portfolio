block variables
include mixins/mixins

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    title #{title}
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")
    meta(content="" name="author")
    meta(content="" name="description")
    meta(content="" name="keywords")

    //- favicon block start
    //- favicon block end

    link(rel="stylesheet" href="/assets/css/foundation%=suffix=%.css%=version=%")
    link(rel="stylesheet" href="/assets/css/main%=suffix=%.css%=version=%")

    script(src="/assets/js/foundation%=suffix=%.js%=version=%" defer)
    script(src="/assets/js/app%=suffix=%.js%=version=%" defer)


  body
    .wrapper
      include ./common/header
      .maincontent
        block content
      include ./common/footer 